
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model QuizViewModel

<h1>Quiz: @Model.Tema.Titulo</h1>


@foreach (var pergunta in Model.Perguntas)
{
    <h3>@pergunta.Description</h3>
        @foreach (var resposta in Model.Respostas.Where(r => r.IdPergunta == pergunta.Id))
    {
        <input type="radio" name="@pergunta.Id" value="@resposta.Id" /> @resposta.Description
        <br/>
    }
}

<button onclick="submitQuiz()">Submit Quiz</button>

<script>
    // Rest of your JavaScript code
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

